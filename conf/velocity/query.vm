<script>
function resetForm() {
$("\#q").val("");
$("input[name='fq']").val("");
$("#query-form").submit();
}

function submitForm() {
var filters="";
var checkedFilter = $('input[name="cat_fq"]:checked');
if (checkedFilter.length > 0) {
   for (var i = 0; i < checkedFilter.length; i++) filters = checkedFilter[i].value  + " " + filters;
}  
if (filters.length > 0) filters="cat:"+filters;
$("input[name='fq']").val(filters);
}
function removeSelection() {
  $("#selectedT").val("");
  $("#query-form").submit();
}
function searchChildren(termAcc) {
  $("\#q").val('"'+termAcc + '" anc_text:("'+termAcc+'")');
  $("#query-form").submit();
}
</script>
<div class="query-box">
  <form id="query-form" action="#{url_for_home}" method="GET">
    #foreach($field in $response.facetFields)
      <div style="font-size:10px;">
        #if ($request.params.get("fq") && $request.params.get("fq").length()>0)
          #set ($checked="checked")
        #else
          #set ($checked="")
        #end
<table style="">
<tr>
        #foreach($facet in $field.values)
            <td style="border: 1px solid black;"><span style="font-size:10px;"><input type="checkbox" name="cat_fq" value='"$facet.name"' $checked/>$facet.name
            <br/>$facet.count</span></td>
        #end
</tr>
</table>
      </div>
    #end
    <input type="hidden" id="query-start" name="start" value="0"/>
    <div class="inputs">
      <span #annTitle("Add the query using the &q= parameter")>Find: <input type="text" id="q" name="q" value="$!esc.html($params.get('q'))"/> <input type="submit" id="querySubmit" /> <a href="browse">Reset</a></span>
      </div>
#if ($request.params.get("fq") && $request.params.get("fq").length()>0)
<input type="button" id='btnRemoveFilter' onclick="javascript:removeFilters();" value="Remove"/>Filters:  <font color="blue">$request.params.get("fq")</font>
<br/>
#end
#if ($request.params.get("selectedT") && $request.params.get("selectedT")!="")
      <span style="font-size:12px;"><input type="button" id='btnRemoveSelection' onclick="javascript:removeSelection();" value="Clear"/> Selected terms: <input type="text" id="selectedT" name="selectedT" value='$request.params.get("selectedT")' readonly size="120"/> </span>
#else
      <input type="hidden" id="selectedT" name="selectedT" value=""/><br/>
#end
    #if($request.params.get('debugQuery'))
      <input type="hidden" name="debugQuery" value="true"/>
    #end
    #if($annotate == true)
      <input type="hidden" name="annotateBrowse" value="true"/>
    #end
        <input type="hidden" name="fq" id="allFQs" value=""/>
     #if($request.params.get('debugQuery'))
        <a href="#" onclick='jQuery(this).siblings("pre").toggle(); return false;'>toggle parsed query</a>
        <pre style="display:none">$response.response.debug.parsedquery</pre>
      #end
      #set($queryOpts = $request.params.get("queryOpts"))
      #if($queryOpts && $queryOpts != "")
        <input type="hidden" name="queryOpts" value="$queryOpts"/>
      #end
</div>
